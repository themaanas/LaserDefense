<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <VBox spacing="10">
        <HBox alignment="CENTER_RIGHT">
            <Label text="Hue:" />
            <Slider fx:id="sliderHue" min="-1" max="1" />
        </HBox>

        <HBox alignment="CENTER_RIGHT">
            <Label text="Saturation:" />
            <Slider fx:id="sliderSaturation" min="-1" max="1" />
        </HBox>

        <HBox alignment="CENTER_RIGHT">
            <Label text="Brightness:" />
            <Slider fx:id="sliderBrightness" min="-1" max="1" />
        </HBox>

        <HBox alignment="CENTER_RIGHT">
            <Label text="Contrast:" />
            <Slider fx:id="sliderContrast" min="-1" max="1" />
        </HBox>

        <Button text="Print values" onAction="#onPrintValues" />
    </VBox>

</ScrollPane>
